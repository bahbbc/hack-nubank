            <label for="disabledTextInput">Senha</label>
            <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
          </div>

          <label>Observacao: utilizaremos seus dados somente para leitura.</label>
