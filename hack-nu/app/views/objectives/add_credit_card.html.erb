<div class="row">

  <div class="col-xs-12 text-center">
    <%= form_for(@objective) do |f| %>
      <div class="form-group">
            <label for="disabledTextInput">Banco</label>
            <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
          </div>
      <div class="form-group">
            <label for="disabledTextInput">Agencia</label>
            <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="disabledTextInput">Conta</label>
