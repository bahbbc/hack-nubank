<div class="row" style="margin-top:40px">
  <div class="container" style="margin-top:40px">
    <div class="row">
      <div class="col-xs-12 text-center">
        <%= form_for(@objective) do |f| %>
          <% if( @objective.name == 'Viajar') %>
            <div class="form-group">
              <label for="disabledTextInput">Para onde você quer ir?</label>
              <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
            </div>
          <% elsif( @objective.name == 'Comprar um carro') %>
            <div class="form-group">
              <label for="disabledTextInput">Qual carro voce quer?</label>
              <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
            </div>
          <% elsif( @objective.name == 'Comprar um imóvel') %>
            <div class="form-group">
              <label for="disabledTextInput">Com que tipo de imóvel voce sonha?</label>
              <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
            </div>
          <% elsif( @objective.name == 'Fazer faculdade') %>
            <div class="form-group">
              <label for="disabledTextInput">O que você quer estudar e onde?</label>
              <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
            </div>
          <% elsif( @objective.name == 'Outro') %>
            <div class="form-group">
              <label for="disabledTextInput">Conte-nos o seu sonho:</label>
              <%= f.text_field :details, style: "width:90%; margin: 0 auto; padding: 20px; margin-bottom:30px", class: "form-control" %>
            </div>
          <% end %>
          <div class="form-group">
            <label for="disabledTextInput">Quanto voce acha que vai custar?</label>
            <%= f.text_field :amount, style: "width:90%; margin: 0 auto; padding: 20px;", class: "form-control" %>
            <%= link_to "Não sei, me diga!" , update_details_automatic_objective_path %>
          </div>
          <%= submit_tag 'Continuar', class: "btn btn-primary", style:"background-color:#678fa9; border:none; margin-top:60px; margin-bottom:40px; width:55%; padding:13px; font-weight:bold; font-size:1.2em" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
