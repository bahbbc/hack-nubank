<div class="container">
  <div class="row">
    <h1>Meu planejamento</h1>
    <div class="col-xs-12 col-md-12">
      <div class="col-xs-12">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=@fix_expense%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=@fix_expense%>%">
            <%= "#{@fix_expense.round}% Despesas fixas " %>
            <span class="sr-only"><%=@fix_expense%></span>
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=@var_expense%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=@var_expense%>%">
            <%= "#{@var_expense.round}% Despesas variáveis " %>
            <span class="sr-only"><%=@var_expense%></span>
          </div>
        </div>
    </div>
      <h2>Detalhamento das despesas fixas</h2>
      <div class="col-xs-12">
          <div class="progress">
            <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=80%>" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
              <%= "80% Conta de água" %>
              <span class="sr-only">80</span>
            </div>
          </div>
      </div>
      <div class="col-xs-12">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=100%>" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <%= "100% Conta de luz" %>
            <span class="sr-only">100</span>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=100%>" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <%= "100% Aluguel" %>
            <span class="sr-only">100</span>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%=0%>" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
            <%= "0% Faculdade" %>
            <span class="sr-only">0</span>
          </div>
        </div>
      </div>
      <h2>Detalhamento das despesas variáveis</h2>
      <div class="col-xs-12">
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%">
            <%= "65% Bares/Restaurantes" %>
            <span class="sr-only">65</span>
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%">
            <%= "90% Compras" %>
            <span class="sr-only">90</span>
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%">
            <%= "10% Saúde" %>
            <span class="sr-only">10</span>
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%">
            <%= "30% Transporte" %>
            <span class="sr-only">30</span>
          </div>
        </div>
      </div>
      <%= link_to 'Adicionar conta manual', new_account_datum_path, class: 'btn btn-primary', style: 'width:50%; border: none; background_color: #678fa9; color: white;'%>
  </div>
</div>
